<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "shared/errors" %>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-10 shadow mb-3 bg-info rounded">
            <%= form_with(model: @article, local: true) do |f| %>
            <div class="form-group row mt-4">
                    <%= f.label :title, class: "col-2 col-form-title text-light" %><br/>
                <div class="col-10">
                    <%= f.text_field :title, class: "form-control shadow rounded", placeholder:"Title of Article" %>
                </div>
            </div>
            
            <div class="form-group row mt-4">
                    <%= f.label :description, class: "col-2 col-form-label text-light" %><br/>
                <div class="col-10">
                    <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder:"Description" %>
                </div>
            </div>
            
            <div class="form-group row justify-content-center mt-4 mb-4">
                <%= f.submit class:"btn btn-outline-light btn-lg col-2" %>
            </div>
            
            <% end %>
        </div>
        <div class="form-group row justify-content-center mt-4 mb-4 text-center">
            <%= link_to "[ Return to Articles List ]", articles_path, class: "text-info justify-content-center" %>
        </div>
    </div>
</div>